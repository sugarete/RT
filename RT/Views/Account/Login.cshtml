@model RT.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "mb-4 " }))
{
    <div class="input-group row w-75 mt-3 d-flex justify-content-center align-items-center">
        @Html.LabelFor(m => m.Username, "Username", new { @class = "col-2 text-center" })
        @Html.TextBoxFor(m => m.Username, "Username", new { placeholder = "Please Enter Username", @class = "form-control col-10" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @style = "color:red" })
    </div>
    <div class="input-group row w-75 mt-3 d-flex justify-content-center align-items-center">
        @Html.LabelFor(m => m.Password, new { @class = "col-2 text-center" })
        @Html.PasswordFor(m => m.Password, new { placeholder = "Please Enter Password", @class = "form-control col-10" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red" })
    </div>
    <div class="input-group row w-75 mt-3 d-flex justify-content-center align-items-center">
        @Html.ActionLink("Register", "Register", "Account", new { @class = "btn btn-link col-2" })
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <button class="btn btn-primary mt-3 w-50 col-10" type="submit">Login</button>
    </div>
}
